<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO UN PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{producto.idProducto}}" method="post">
                    <div class="input-group mt-2">
                        <label for="txtNombre" class="input-group-text">Nombre:</label>
                        <input class="form-control" type="text" name="txtNombre" id="txtNombre" value="{{producto.vchNombre}}" placeholder="Ejemplo: Luis Angel" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="txtDescripcion" class="input-group-text">Nombre del producto:</label>
                        <input class="form-control" type="text" name="txtDescripcion" id="txtDescripcion" placeholder="Ejemplo: Fernandez" value="{{producto.vchDescripcion}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="fltPrecio" class="input-group-text">Precio:</label>
                        <input class="form-control" type="text" name="fltPrecio" id="fltPrecio" value="{{producto.fltPrecio}}" placeholder="0" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>