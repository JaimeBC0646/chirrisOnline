<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR NUEVA PERSONA</h3>
                </div>

                <div class="card-body">

                    <form action="/add" method="post">
                    <div class="input-group mt-2">
                        <label for="txtNombre" class="input-group-text">Nombre de Producto</label>
                        <input class="form-control" type="text" name="txtNombre" id="txtNombre" placeholder="Ej. Frape" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="txtDescripcion" class="input-group-text">Descripcion</label>
                        <input class="form-control" type="text" name="txtDescripcion" id="txtDescripcion" placeholder="Ej. Mazapan" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="fltPrecio" class="input-group-text">Precio</label>
                        <input class="form-control" type="text" name="fltPrecio" id="fltPrecio" placeholder="$ 0.00" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Dar de Alta</button>
                    </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>